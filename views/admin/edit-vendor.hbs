
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Edit Vendors</h2>
            <form action="/admin/edit-vendor/{{vendoR._id}}" method="POST" enctype="multipart/form-data">
                <label for="">Vendor Name</label>
                <input type="text" name="Vendor" class="form-control" id="" value="{{vendoR.Vendor}}">

                <label for="">Shop Name</label>
                <input type="text" name="Shop" class="form-control" id="" value="{{vendoR.Shop}}">

                <label for="">Password</label>
                <input type="text" name="Password" class="form-control" id="" value="{{vendoR.Password}}">
                {{!-- <input type="checkbox" onclick="myFunction()">Show Password<br> --}}

                <label for="">Image</label>
                <img src="/vendor-images/{{vendoR._id}}.jpg" alt="" style="width:100px; height:auto" id="imgView" class="pt-3">
                
                <input type="file" name="Image"  class="form-control" id="" onchange="viewImage(event)">

                <button type="submit" class="btn btn-success mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>


<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>
