<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Add Vendors</h2>
            <form action="/admin/add-vendor" method="POST" enctype="multipart/form-data">

                <input type="hidden" name="status" class="form-control" id="" value="Block">

                <label for="">Vendor Name</label>
                <input type="text" name="Vendor" class="form-control" id="">

                <label for="">Shop Name</label>
                <input type="text" name="Shop" class="form-control" id="">

                <label for="">Password</label>
                <input type="password" name="Password" class="form-control" id="">

                <label for="">Image</label>
                <input type="file" name="Image"  class="form-control" id="">

                <button type="submit" class="btn btn-success mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>